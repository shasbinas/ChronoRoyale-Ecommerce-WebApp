<main class="main">
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="product-detail accordion-detail">
            <div class="row mb-50">
              <!-- ====== LEFT SIDE: Product Gallery ====== -->
              <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-gallery">
                  <span class="zoom-icon"><i class="fi-rs-search"></i></span>

                  <!-- MAIN SLIDES -->
                  <div class="product-image-slider">
                    {{#each product.picturePath}}
                      <figure class="border-radius-10">
                        <img src="{{this}}" alt="product image" />
                      </figure>
                    {{/each}}
                  </div>

                  <!-- THUMBNAILS -->
                  <div class="slider-nav-thumbnails pl-15 pr-15">
                    {{#each product.picturePath}}
                      <div>
                        <img src="{{this}}" alt="product image" />
                      </div>
                    {{/each}}
                  </div>
                </div>
              </div>

              <!-- ====== RIGHT SIDE: Product Details ====== -->
              <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="detail-info">
                  <h2 class="title-detail">{{product.name}}</h2>

                  <div class="product-detail-rating">
                    <div class="pro-details-brand">
                      <span>Brand: <a href="#">{{product.brand}}</a></span>
                    </div>
                    <div class="product-rate-cover text-end">
                      <div class="product-rate d-inline-block">
                        <div class="product-rating" style="width:90%"></div>
                      </div>
                      <span class="font-small ml-5 text-muted">(25 reviews)</span>
                    </div>
                  </div>

                  <div class="clearfix product-price-cover">
                    <div class="product-price primary-color float-left">
                      <ins>
                        <span class="text-brand">₹{{product.discountPrice}}</span>
                      </ins>
                      <ins>
                        <span class="old-price font-md ml-15">₹{{product.price}}</span>
                      </ins>
                      <span class="save-price font-md color3 ml-15">25% Off</span>
                    </div>
                  </div>

                  <div class="bt-1 border-color-1 mt-15 mb-15"></div>

                  <div class="short-desc mb-30">
                    <p>{{product.shortDesc}}</p>
                  </div>

                  <div class="product_sort_info font-xs mb-30">
                    <ul>
                      <li class="mb-10">
                        <i class="fi-rs-crown mr-5"></i>
                        1 Year {{product.brand}} Brand Warranty
                      </li>
                      <li class="mb-10">
                        <i class="fi-rs-badge mr-5"></i>{{stockStatus}}
                      </li>
                      <li>
                        <i class="fi-rs-credit-card mr-5"></i>
                        Cash on Delivery available
                      </li>
                    </ul>
                  </div>

                  <div class="bt-1 border-color-1 mt-30 mb-30"></div>

                  <!-- ====== ERROR MESSAGE ====== -->
                  {{#if error}}
                    <div class="alert alert-danger mb-20">
                      {{error}}
                    </div>
                  {{/if}}

                  <!-- ====== ADD TO CART FORM ====== -->
                  <form action="/add-to-cart" method="POST" class="add-to-cart-form">
                    <div class="detail-qty border radius mb-20">
                      <input
                        type="number"
                        name="quantity"
                        value="1"
                        min="1"
                        class="qty-input text-center"
                        style="width: 60px; padding: 5px; border-radius: 5px; border: 1px solid #ccc;"
                      />
                    </div>

                    <!-- Hidden inputs for product info -->
                    <input type="hidden" name="productId" value="{{product._id}}" />
                    <input type="hidden" name="name" value="{{product.name}}" />
                    <input type="hidden" name="brand" value="{{product.brand}}" />
                    <input type="hidden" name="price" value="{{product.discountPrice}}" />
                    <input type="hidden" name="image" value="{{product.picturePath.[0]}}" />
                    <input type="hidden" name="shortDescription" value="{{product.shortDesc}}" />

                    <div class="product-extra-link2">
                      <button type="submit" class="button button-add-to-cart">
                        Add to cart
                      </button>
                      {{!-- <a
                        aria-label="Add To Wishlist"
                        class="action-btn hover-up"
                        href="shop-wishlist.html"
                      >
                        <i class="fi-rs-heart"></i>
                      </a> --}}
                    </div>
                  </form>

                  <!-- ====== SHARE SECTION ====== -->
                  <div class="social-icons single-share mt-30">
                    <ul class="text-grey-5 d-inline-block">
                      <li><strong class="mr-10">Share this:</strong></li>
                      <li class="social-facebook">
                        <a href="#"><img src="/userAssets/imgs/theme/icons/icon-facebook.svg" alt="Facebook" /></a>
                      </li>
                      <li class="social-twitter">
                        <a href="#"><img src="/userAssets/imgs/theme/icons/icon-twitter.svg" alt="Twitter" /></a>
                      </li>
                      <li class="social-instagram">
                        <a href="#"><img src="/userAssets/imgs/theme/icons/icon-instagram.svg" alt="Instagram" /></a>
                      </li>
                      <li class="social-linkedin">
                        <a href="#"><img src="/userAssets/imgs/theme/icons/icon-pinterest.svg" alt="Pinterest" /></a>
                      </li>
                    </ul>
                  </div>
                </div> <!-- End detail-info -->
              </div> <!-- End right column -->
            </div> <!-- End product detail row -->

            <!-- ====== DESCRIPTION ====== -->
            <div class="row">
              <div class="col-lg-10 m-auto entry-main-content">
                <h2 class="section-title style-1 mb-30">Description</h2>
                <div class="description mb-50">
                  <p>{{product.description}}</p>
                </div>
              </div>
            </div>

          

            <!-- ====== RELATED PRODUCTS ====== -->
            <div class="row mt-60">
              <div class="col-12">
                <h3 class="section-title style-1 mb-30">Related products</h3>
              </div>
              <div class="col-12">
                <div class="row related-products">
                  {{#each relatedProducts}}
                    <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                      <div class="product-cart-wrap small hover-up">
                        <div class="product-img-action-wrap">
                          <div class="product-img product-img-zoom">
                            <a href="/productDetails?id={{this._id}}">
                              <img class="default-img" src="{{this.picturePath.[0]}}" alt="{{this.name}}" />
                            </a>
                          </div>
                          <div class="product-action-1">
                            <a aria-label="Add To Wishlist" class="action-btn small hover-up" href="shop-wishlist.html">
                              <i class="fi-rs-heart"></i>
                            </a>
                          </div>
                          <div class="product-badges product-badges-position product-badges-mrg">
                            <span class="hot">{{this.category}}</span>
                          </div>
                        </div>
                        <div class="product-content-wrap">
                          <h2><a href="/productDetails?id={{this._id}}">{{this.name}}</a></h2>
                          <div class="product-price">
                            <span>₹{{this.discountPrice}}</span>
                            <span class="old-price">₹{{this.price}}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>

            <!-- ====== BANNER ====== -->
            <div class="banner-img banner-big wow fadeIn f-none animated mt-50">
              <img class="border-radius-10" src="/userAssets/imgs/banner/banner-4.png" alt="" />
              <div class="banner-text">
                <h4 class="mb-15 mt-40">Repair Services</h4>
                <h2 class="fw-600 mb-20">
                  We're an Apple<br />Authorised Service Provider
                </h2>
              </div>
            </div>
          </div> <!-- End product-detail accordion-detail -->
        </div> <!-- End col-lg-12 -->
      </div> <!-- End row -->
    </div> <!-- End container -->
  </section>
</main>
