<main class="main">

  <!-- Products Section -->
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <!-- Product Grid -->
          <div class="row product-grid-3">
            {{#if products.length}}
              {{#each products}}
                <div class="col-lg-3 col-md-4 col-sm-6">
                  <div class="product-cart-wrap mb-30">

                    <!-- Product Image -->
                    <div class="product-img-action-wrap">
                      <div class="product-img product-img-zoom">
                        <!-- Updated link to pass id in query -->
                        <a href="/productDetails?id={{this._id}}">
                          {{#if this.picturePath}}
                            <img class="default-img" src="{{this.picturePath.[0]}}" alt="{{this.name}}" />
                            <img class="hover-img" src="{{this.picturePath.[0]}}" alt="{{this.name}}" />
                          {{else}}
                            <img class="default-img" src="/userAssets/imgs/default-product.png" alt="No image available" />
                            <img class="hover-img" src="/userAssets/imgs/default-product.png" alt="No image available" />
                          {{/if}}
                        </a>
                      </div>

                      <!-- Hover Actions -->
                      <div class="product-action-1">
                        <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                          <i class="fi-rs-search"></i>
                        </a>
                        <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/add-to-wishlist?productId={{this._id}}">
                          <i class="fi-rs-heart"></i>
                        </a>
                        <a aria-label="Compare" class="action-btn hover-up" href="#">
                          <i class="fi-rs-shuffle"></i>
                        </a>
                      </div>

                      <!-- Brand Badge -->
                      <div class="product-badges product-badges-position product-badges-mrg">
                        <span class="hot">{{this.brand}}</span>
                      </div>

                      <!-- Optional Badge -->
                      {{#if this.badge}}
                        <div class="product-badges product-badges-position product-badges-mrg">
                          <span class="{{this.badge.type}}">{{this.badge.text}}</span>
                        </div>
                      {{/if}}
                    </div>

                    <!-- Product Info -->
                    <div class="product-content-wrap">
                      <div class="product-category">
                        <a href="#">{{this.category}}</a>
                      </div>
                      <h2>
                        <a href="/productDetails?id={{this._id}}">{{this.name}}</a>
                      </h2>
                      <div class="rating-result" title="{{this.rating}}%">
                        <span><span>{{this.rating}}</span>60%</span>
                      </div>
                      <div class="product-price">
                        <span>₹{{this.price}}</span>
                        {{#if this.oldPrice}}
                          <span class="old-price">₹{{this.oldPrice}}</span>
                        {{/if}}
                      </div>
                      <div class="product-action-1 show">
                        <a aria-label="Add To Cart" class="action-btn hover-up" href="/add-to-cart?productId={{this._id}}">
                          <i class="fi-rs-shopping-bag-add"></i>
                        </a>
                      </div>
                    </div>

                  </div>
                </div>
              {{/each}}
            {{else}}
              <p>No products available right now.</p>
            {{/if}}
          </div>

        </div> <!-- end col-lg-12 -->
      </div> <!-- end row -->
    </div> <!-- end container -->
  </section>
</main>
