<main class="main">

  {{!-- Banner Section --}}
  <section class="home-slider position-relative pt-50">
    <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">
      {{#each banners}}
        <div class="single-hero-slider single-animation-wrap">
          <div class="container">
            <div class="row align-items-center slider-animated-1">
              <div class="col-lg-5 col-md-6">
                <div class="hero-slider-content-2">
                  <h4 class="animated">{{titleSmall}}</h4>
                  <h2 class="animated fw-900">{{titleMain}}</h2>
                  <h1 class="animated fw-900 text-brand">{{highlight}}</h1>
                  <p class="animated">{{description}}</p>
                  <a class="animated btn btn-brush btn-brush-3" href="{{link}}">Shop Now</a>
                </div>
              </div>
              <div class="col-lg-7 col-md-6">
                <div class="single-slider-img single-slider-img-{{id}}">
                  <img class="animated slider-1-1" src="{{image}}" alt="{{highlight}}" />
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="slider-arrow hero-slider-1-arrow"></div>
  </section>

