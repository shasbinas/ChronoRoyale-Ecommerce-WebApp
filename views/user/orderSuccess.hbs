<main class="main">
  <section class="mt-50 mb-50">
    <div class="container">
      <!-- Order Success Message -->
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <div class="card p-5 border-success shadow-sm">
            <div class="mb-4">
              <i class="fas fa-check-circle text-success" style="font-size: 60px;"></i>
            </div>
            <h2 class="text-success mb-3">Your Order Has Been Placed!</h2>
            <p class="mb-3">
              Thank you for shopping with us. Your order <strong>#{{orderId}}</strong> has been successfully placed.
            </p>
            <p class="mb-4">
              We will send a confirmation email to <strong>{{email}}</strong> with the order details.
            </p>
            <a href="/" class="btn btn-primary btn-lg">Continue Shopping</a>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="row mt-50">
        <!-- Billing Details -->
        <div class="col-md-6">
          <div class="mb-25">
            <h4>Billing Details</h4>
          </div>
          <div class="card p-3 border">
            <h5>{{billingName}}</h5>
            <p>{{address}}</p>
            <p>Landmark: {{landmark}}</p>
            <p>Phone: {{phone}}</p>
          </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-md-6">
          <div class="order_review">
            <div class="mb-20">
              <h4>Your Orders</h4>
            </div>
            <div class="table-responsive order_table text-center">
              <table class="table">
                <thead>
                  <tr>
                    <th colspan="2">Product</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  {{#if cart.length}}
                    {{#each cart}}
                      <tr>
                        <td class="image product-thumbnail">
                          <img src="{{this.image}}" alt="{{this.name}}" />
                        </td>
                        <td>
                          <h5>{{this.name}}</h5>
                          <span class="product-qty">x {{this.quantity}}</span>
                        </td>
                        <td>₹{{this.total}}</td>
                      </tr>
                    {{/each}}
                    <tr>
                      <th>Total</th>
                      <td colspan="2" class="product-subtotal">
                        <span class="font-xl text-brand fw-900">₹{{total}}</span>
                      </td>
                    </tr>
                  {{else}}
                    <tr>
                      <td colspan="3">Your cart is empty.</td>
                    </tr>
                  {{/if}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Optional: Track Order Button -->
      <div class="row mt-30">
        <div class="col-12 text-center">
          <a href="/order-history" class="btn btn-outline-success btn-lg">Track Your Order</a>
        </div>
      </div>
    </div>
  </section>
</main>
